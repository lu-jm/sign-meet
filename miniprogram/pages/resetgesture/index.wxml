<!--pages/gesture/index.wxml-->
<view class="index-page">
  <view style="width:100%;height:600rpx;position:fixed;position: fixed;z-index:{{z_index}}"></view>
  <block wx:if="{{ischange}}">
    <mini-gesture-lock container-width="{{600}}" cycleRadius="{{70}}" bind:end="onEnd" password="{{password}}" flag="signgesture"></mini-gesture-lock>
  </block>
  <block wx:else>
    <mini-gesture-lock container-width="{{600}}" cycleRadius="{{70}}" bind:end="onEnd" password="{{password}}" flag="resetgesture"></mini-gesture-lock>
    <view class="result">{{data}}</view>
    <button bindtap="refushGesture">重置手势</button>
  </block>
</view>