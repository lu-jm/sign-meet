<view class="page">

  <block wx:if="{{success}}">
    <view class="weui-msg">
      <view class="weui-msg__icon-area">
        <icon type="success" size="64"></icon>
      </view>
      <view class="weui-msg__text-area">
        <view class="weui-msg__title">签到成功</view>
        <view class="weui-msg__desc">签到成功，点击下方按钮返回首页
          <navigator url="" class="weui-msg__link">文字链接</navigator>
        </view>
      </view>
      <view class="weui-msg__opr-area">
        <view class="weui-btn-area">
          <button class="weui-btn" type="primary" bindtap="comeBack">返回首页</button>
        </view>
      </view>
      <view class="weui-msg__tips-area">
        <view class="weui-msg__tips">内容详情，可根据实际需要安排，如果换行则不超过规定长度，居中展现
          <navigator url="" class="weui-msg__link">文字链接</navigator>
        </view>
      </view>
      <view class="weui-msg__extra-area">
        <view class="weui-footer">
          <view class="weui-footer__links">
            <navigator url="" class="weui-footer__link">底部链接文本</navigator>
          </view>
          <view class="weui-footer__text">Copyright © 2008-2016 weui.io</view>
        </view>
      </view>
    </view>
  </block>

  <block wx:else>
    <view class="weui-msg">
      <view class="weui-msg__icon-area">
        <icon type="warn" size="64"></icon>
      </view>
      <view class="weui-msg__text-area">
        <view class="weui-msg__title">签到失败</view>
        <view class="weui-msg__desc">二维码过期或者签到时间已过
          <navigator url="" class="weui-msg__link">文字链接</navigator>
        </view>
      </view>
      <view class="weui-msg__tips-area">
        <view class="weui-msg__tips">内容详情，可根据实际需要安排，如果换行则不超过规定长度，居中展现
          <navigator url="" class="weui-msg__link">文字链接</navigator>
        </view>
      </view>
      <view class="weui-msg__opr-area">
        <view class="weui-btn-area">
          <button class="weui-btn" type="default" bindtap="restartScan">重新签到</button>
        </view>
      </view>
      <view class="weui-msg__extra-area">
        <view class="weui-footer">
          <view class="weui-footer__links">
            <navigator url="" class="weui-footer__link">底部链接文本</navigator>
          </view>
          <view class="weui-footer__text">Copyright © 2008-2016 weui.io</view>
        </view>
      </view>
    </view>
  </block>

</view>